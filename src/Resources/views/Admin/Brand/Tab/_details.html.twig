<div class="ui active tab" data-tab="details">
    <h3 class="ui dividing header">{{ 'sylius.ui.details'|trans }}</h3>
    {{ form_errors(form) }}

    <div class="ui two column stackable grid">
        <div class="column">
            <div class="ui segment">
                {{ form_row(form.code) }}
                {{ form_row(form.name) }}
                {{ form_row(form.enabled) }}

            </div>
        </div>
    </div>
    <div class="ui attached segment">
        <div class="ui one column stackable grid">
            <div class="column">
                <div class="ui segment">
                    {% block sylius_product_autocomplete_choice_row %}
                        {{ form_row(form.products, {'remote_url': path('sylius_admin_ajax_product_by_name_phrase'), 'load_edit_url': path('sylius_admin_ajax_product_by_name_phrase'),'remote_criteria_type':'phrase','remote_criteria_name':'phrase'}) }}
                    {% endblock %}
                </div>
            </div>
        </div>

    </div>
    {{ sonata_block_render_event('loevgaard_sylius_brand.admin.brand.' ~ action ~ '.tab_details', {'form': form}) }}
</div>
