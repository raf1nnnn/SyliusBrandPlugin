<?xml version="1.0" ?>

<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="Loevgaard\SyliusBrandPlugin\Model\Brand">
        <attribute name="id">
            <group>admin:product:read</group>
            <group>shop:product:read</group>
        </attribute>
        <attribute name="code">
            <group>admin:product:create</group>
            <group>admin:product:read</group>
            <group>admin:product:update</group>
            <group>shop:product:read</group>
        </attribute>
        <attribute name="name">
            <group>admin:product:create</group>
            <group>admin:product:read</group>
            <group>admin:product:update</group>
            <group>shop:product:read</group>
        </attribute>
        <attribute name="brandImage">
            <group>admin:product:create</group>
            <group>admin:product:read</group>
            <group>admin:product:update</group>
            <group>shop:product:read</group>
        </attribute>

        <attribute name="activeProducts">
            <group>admin:product:read</group>
            <group>shop:product:read</group>
        </attribute>


    </class>
</serializer>
